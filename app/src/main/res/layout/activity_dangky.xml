<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#17202A"
    android:orientation="vertical"
    tools:context=".view.dangky">
    <ImageView
        android:src="@drawable/logo1"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="ĐĂNG KÝ"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtfirstname"
        android:hint="Nhập họ người dùng"
        android:textColorHint="#E5E7E9"
        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/edtlastname"
        android:hint="Nhập tên người dùng"
        android:textColorHint="#E5E7E9"
        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/edttaikhoan"
        android:hint="Nhập tên tài khoản"
        android:textColorHint="#E5E7E9"
        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/edtmatkhau"
        android:textColorHint="#E5E7E9"
        android:hint="Nhập mật khẩu"
        android:layout_marginTop="15dp"
        android:layout_width="320dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/buttonhuy"
            android:text="HỦY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/buttondongy"
            android:text="ĐỒNG Ý"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>